# ProjectX Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ============================================
# n8n Automation Configuration (Phase 0)
# ============================================
# n8n Cloud webhook endpoint for event processing
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://iitian-om.app.n8n.cloud/webhook-test/projectx/sync

# ============================================
# API Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ============================================
# Database Configuration (Phase 0 - Pending)
# ============================================
# MongoDB Atlas (Recommended for MVP)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/projectx?retryWrites=true&w=majority

# OR MySQL/PostgreSQL
# DATABASE_URL=mysql://user:password@localhost:3306/projectx
# DATABASE_URL=postgresql://user:password@localhost:5432/projectx

# ============================================
# External Calendar Integrations (Phase 5)
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

OUTLOOK_CLIENT_ID=your_outlook_client_id_here
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret_here
OUTLOOK_REDIRECT_URI=http://localhost:3000/api/auth/outlook/callback

# ============================================
# Notification Services (Phase 3)
# ============================================
# SendGrid for Email Notifications
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@projectx.com

# Twilio for SMS Notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Web Push Notifications (VAPID Keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# ============================================
# Production Environment Variables
# ============================================
# Set NODE_ENV to 'production' when deploying
NODE_ENV=development

# Next.js URL (update for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Security & Authentication (Future)
# ============================================
# JWT Secret for session management
JWT_SECRET=your_secure_random_string_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Feature Flags (Optional)
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_DEBUG_MODE=false
